class Solution {
    public String reverseVowels(String s) {
        char[] arr = s.toCharArray();
        int i = 0, j = s.length() - 1;

        while (i < j) {
            char b = arr[j];
            char c = arr[i];

            while (i < j && (b != 'a' && b != 'e' && b != 'i' && b != 'o' && b != 'u'
                          && b != 'A' && b != 'E' && b != 'I' && b != 'O' && b != 'U')) {
                j--;
                b = arr[j]; 
            }

            while (i < j && (c != 'a' && c != 'e' && c != 'i' && c != 'o' && c != 'u'
                          && c != 'A' && c != 'E' && c != 'I' && c != 'O' && c != 'U')) {
                i++;
                c = arr[i]; 
            }

            if (i < j) {
                char temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
                j--;
                i++;
            }
        }

        return new String(arr);
    }
}
