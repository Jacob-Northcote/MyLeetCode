class Solution {
    public boolean isTrionic(int[] nums) {
        if(nums.length < 4 || nums[0] >= nums[1]){return false;}

        int change = 0;
        
        for(int i = 1; i < nums.length; i++){
            int prev = i - 1;
            if (nums[i] == nums[prev]){return false;}
            else if(change == 0 && nums[i] > nums[prev]){change++;}
            else if(change == 1 && nums[i] < nums[prev]){change++;}
            else if(change == 2 && nums[i] > nums[prev]){change++;}
            else if(change == 3 && nums[i] <= nums[prev]){return false;}
        }
        if(change == 3){
            return true;
        }
        return false;
    }
}
