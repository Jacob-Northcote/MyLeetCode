class Solution {
    public String countAndSay(int n) {
        if (n == 1) {
            return "1";
        }
        StringBuilder ret = new StringBuilder();
        ret.append('1');
        int i = 1;
    
        while (i < n) {
            StringBuilder next = new StringBuilder();
            int count = 1;
            int j = 1;
    
            while (j < ret.length()) {
                if (ret.charAt(j) == ret.charAt(j - 1)) {
                    count++;
                } 
                else {
                    next.append(count).append(ret.charAt(j - 1));
                    count = 1;
                }
                j++;
            }
            next.append(count).append(ret.charAt(ret.length() - 1));
            ret = next;
            i++;
        }
        return ret.toString();
    }
}
