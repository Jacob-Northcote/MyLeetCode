class Solution {
    public boolean canPlaceFlowers(int[] flowerbed, int n) {
        for(int i = 0; i < flowerbed.length; i++){
            if(((i-1 < 0) || (flowerbed[i-1] == 0)) && (((i+1) > flowerbed.length -1) || (flowerbed[i+1] == 0))  && (flowerbed[i] == 0)){
                flowerbed[i] = 1;
                n--;
                continue;
            }
        }
        if(n > 0){
            return false;
        }
        return true;
    }
}
