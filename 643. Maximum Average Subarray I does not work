class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int first = 0;
        int seccond = k-1;
        int tempFirst= 0;
        double currAve = 0;
        double ave = Double.NEGATIVE_INFINITY;

        while(seccond != nums.length){
            while(tempFirst != seccond + 1){
                currAve += nums[tempFirst];
                tempFirst++;
            }
            currAve /= k;
            ave = Math.max(currAve, ave);

            first++;
            seccond++;
            currAve = 0;
            tempFirst = first;
        }
        return ave;
    }
}
