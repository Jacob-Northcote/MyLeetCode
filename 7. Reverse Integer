class Solution {
    public int reverse(int x) {
        int b = 1;
        if (x < 0) {
            if (x == Integer.MIN_VALUE) return 0; 
            b = -1;
            x *= -1;
        }
        StringBuilder sb = new StringBuilder(String.valueOf(x));
        sb.reverse();

        long val = Long.parseLong(sb.toString()) * b;

        if (val > Integer.MAX_VALUE || val < Integer.MIN_VALUE) {
            return 0;
        }

        return (int) val;
    }
}
